<div class="container mt-4">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="card">
              <div class="card-header">
                Change Status
              </div>
              <div class="card-body">
                <%= form_for(@user) do |u| %>
                    <div class="form-group">
                    <span>Admin</span><br/>
                    <% u.label :admin %><br/>
                    <%= u.check_box :admin, autofocus: true, class: "form-control" %>
                  </div>
                  <div class="form-group">
                    <%= u.submit "Update", class: 'btn btn-primary' %>
                  </div>
                <% end %>    
              </div>
            </div>
        </div>
        <div class="col-3"></div>
    </div>
</div>
